{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="content">
    <div class="container-fluid">
    <div class="row">
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title">Les Demandes D'attestations</h4>
                <p class="card-category"></p>
            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                    <th>Name Etudiant</th>
                    <th>specialite</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>type</th>
                    <th>langue</th>

                    </thead>

                    <tr>
                        {% for u in re %}
                        <td>
                            {{ u.iduser.nom }}
                        </td>
                        <td>
                            {{ u.iduser.specialite}}
                        </td>
                        <td>
                            {{ u.description}}
                        </td>
                        <td>
                            {{ u.date|date }}
                        </td>
                        <td>
                            {{ u.ida.typea}}
                        </td>
                        <td>
                            {{ u.ida.langue}}
                        </td>

                        <td>
                            <a href="{{ path('service_delete', { 'id': u.ids }) }}"><i class="fa fa-plus-circle"></i> delete demande</a>
                        </td>
                        <td>
                            <a href="{{ path('service_delete', { 'id': u.ids }) }}"><i class="fa fa-plus-circle"></i> repondre demande</a>
                        </td>
                    </tr>

                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    </div>
{% endblock content %}
